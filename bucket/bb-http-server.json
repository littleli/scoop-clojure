        }
    },
    "pre_install": "Set-Content \"$dir\\http-server.bat\" \"@bb.exe \"\"%~dp0http-server.jar\"\" %*\"",
    "bin": "http-server.bat",
    "checkver": {
        "url": "https://api.github.com/repos/babashka/http-server/tags",
        "regex": "\"v([\\d.]+)\""
    },
    "autoupdate": {
